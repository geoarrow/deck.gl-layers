{
  "name": "deck.gl-layers-monorepo",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "build": "cd packages/deck.gl-layers && npm run build",
    "clean": "rimraf dist packages/deck.gl-layers/dist",
    "docs:build": "typedoc",
    "docs:publish": "gh-pages -d docs_build",
    "fmt:check": "prettier '**/*.ts' --check",
    "fmt": "prettier '**/*.ts' --write",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest run",
    "typecheck": "tsc --build",
    "watch": "tsc --watch"
  },
  "files": [
    "dist/",
    "src/"
  ],
  "repository": "https://github.com/geoarrow/deck.gl-layers",
  "author": "Kyle Barron <kylebarron2@gmail.com>",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-terser": "^0.4.3",
    "@rollup/plugin-typescript": "^11.1.2",
    "gh-pages": "^6.1.0",
    "prettier": "^3.1.0",
    "rimraf": "^5.0.5",
    "rollup": "^3.26.2",
    "rollup-plugin-dts": "^5.3.0",
    "typedoc": "^0.25.4",
    "typedoc-plugin-missing-exports": "^2.1.0",
    "typescript": "^5.2.2",
    "vitest": "^0.33.0"
  },
  "overrides": {
    "@deck.gl/aggregation-layers": "^9.2.1",
    "@deck.gl/core": "^9.2.1",
    "@deck.gl/extensions": "^9.2.1",
    "@deck.gl/geo-layers": "^9.2.1",
    "@deck.gl/layers": "^9.2.1",
    "@luma.gl/constants": "^9.2.1",
    "@luma.gl/core": "^9.2.1",
    "@luma.gl/engine": "^9.2.1",
    "@luma.gl/shadertools": "^9.2.1",
    "apache-arrow": ">=21"
  },
  "volta": {
    "node": "22.20.0",
    "npm": "11.6.2"
  }
}
